# Telegram Bot Token (từ @BotFather)
BOT_TOKEN=none

# Telegram API credentials (từ my.telegram.org)
API_ID=none
API_HASH=none

# Database settings
DATABASE_URL=telegram_bot.db

# Bot settings
MAX_CONFIGS_PER_USER=10
MAX_CHANNELS_DISPLAY=10

# Message settings
MAX_MESSAGE_LENGTH=4096
MAX_HEADER_LENGTH=500
MAX_FOOTER_LENGTH=500
MAX_BUTTON_TEXT_LENGTH=64

# Copy settings
COPY_DELAY_SECONDS=1.0
MAX_RETRY_ATTEMPTS=3

# Session settings
SESSION_TIMEOUT_HOURS=24
PHONE_CODE_TIMEOUT_MINUTES=5

# Logging settings
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_TO_CONSOLE=True

# Security settings (optional)
ALLOWED_USERS=
RATE_LIMIT_MESSAGES=30
RATE_LIMIT_PERIOD=60

# Feature flags (optional)
ENABLE_WEB_PREVIEW=False
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=False 
